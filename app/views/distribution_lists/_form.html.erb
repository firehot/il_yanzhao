<%= semantic_form_for resource ,:remote => true,:html => {:id => "distribution_list_form",:class => "bill_selector"} do |f|%>
  <%= f.inputs do %>
    <%= f.hidden_field :user_id,:value => current_user.id if f.object.new_record?%>
    <%= f.input :bill_date,:as => :string,:input_html =>{:readonly => true,:size => 20,:class => 'datepicker'} %>
    <%= f.input :org_id,:label => "到货地",:as => :select,:collection => current_ability_orgs_for_select,:include_blank => false,:input_html => {:id => "to_org_id"} %>
    <%=hidden_field_tag :state_eq,:reached%>
    <%=hidden_field_tag :type_in,"","data-type" => ['ComputerBill','HandBill','ReturnBill'].to_json %>
  <% end %>
<% end%>
