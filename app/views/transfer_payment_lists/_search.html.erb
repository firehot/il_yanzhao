<%= semantic_form_for resource_class.search,:html => {:method => :get,:style => "width : 300px;" } do |f|%>
  <%= hidden_field_tag :direction,params[:direction] %>
  <%= hidden_field_tag :sort,params[:sort] %>
  <%= f.inputs do %>
    <%= f.input :org_id_eq,:label => "组织机构",:as => :select,:collection => current_ability_orgs_for_select%>
    <%= f.input :bank_id_eq,:label => "银行",:as => :select,:collection => Bank.where(:is_active => true)%>
    <%= f.input :bill_date_gte,:label => "录入日期",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true,:value => Date.today} %>
    <%= f.input :bill_date_lte,:label => "~",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true,:value => Date.today} %>
  <% end %>
  <%=f.actions do %>
    <%=submit_tag "查询代收货款支付清单",:class => "sexybutton sexysimple sexyblue" %>
  <% end %>
<% end%>
