<%= semantic_form_for resource,:validate=> false,:remote=> true,:html => {:id => "carrying_bill_form",:class => "wat-cf carrying_bill #{get_bill_update_class(resource)}"} do |f|%>
  <%= f.error_messages %>
  <%= f.hidden_field :user_id,:value => current_user.id if f.object.new_record?%>
  <%= f.hidden_field :original_bill_id%>
  <table class='table bill_input'>
    <tbody>
      <tr>
        <td>单据编号</td>
        <td><%= f.text_field :bill_no,:size => 20,:maxlength => 7 %></td>
        <td>货号</td>
        <td><%= f.text_field :goods_no,:size => 20 %></td>
        <td>单据日期</td>
        <td><%= f.text_field :bill_date,:size => 10 ,:readonly => true,:id => :bill_date %></td>
      </tr>
      <tr>
        <td>发货站</td>
        <td><%= f.select :from_org_id,current_ability_orgs_for_select,{},:readonly => true,:id => :from_org_id %></td>
        <% if ["TransitBill","HandTransitBill"].include? f.object.type %>
          <td>中转站</td>
          <td><%= f.select :transit_org_id,yards_for_select ,{},:id => :transit_org_id%></td>
          <td>到货地</td>
          <td><%= f.select :area_id,areas_for_select,{},:id => :area_id %></td>
        <%else%>
          <td>到货站</td>
          <td><%= f.select :to_org_id,exclude_current_ability_orgs_for_select(false,false) ,{:include_blank => true},:class =>:select_org,:id =>:to_org_id %></td>
          <td colspan='2'><span style='font-weight : bold;'>&lt;&lt;输入名称/拼音后回车可查询</span></td>
        <%end%>
      </tr>

      <tr>
        <td>客户编号</td>
        <td><%= f.text_field :customer_code,:id => 'customer_code',:size => 10 %></td>
        <td colspan='4'></td>
      </tr>
      <tr>
        <td>发货人</td>
        <td><%= f.text_field :from_customer_name,:id => 'from_customer_name',:size => 20  %></td>
        <td>手机</td>
        <td><%= f.text_field :from_customer_mobile,:id => 'from_customer_mobile',:size => 20  %></td>
        <td>电话</td>
        <td><%= f.text_field :from_customer_phone,:id => 'from_customer_phone',:size => 20  %></td>
      </tr>
      <tr>
        <td>收货人</td>
        <td><%= f.text_field :to_customer_name,:id => 'to_customer_name',:size => 20  %></td>
        <td>手机</td>
        <td><%= f.text_field :to_customer_mobile,:id => 'to_customer_mobile',:size => 20  %></td>
        <td>电话</td>
        <td><%= f.text_field :to_customer_phone,:id => 'to_customer_phone',:size => 20  %></td>
      </tr>
      <tr>
        <td>运费支付方式</td>
        <td><%= f.select :pay_type,CarryingBill.pay_types,{},:id => :pay_type %></td>
        <td>运费</td>
        <td><%= f.text_field :carrying_fee,:id => "carrying_fee",:size => 15  %></td>
        <td>代收货款</td>
        <td><%= f.text_field :goods_fee,:id => "goods_fee",:size => 15  %></td>
      </tr>
      <tr>
        <td>保险费</td>
        <td>

          <!--分公司不用输入保险费-->
          <% if current_user.default_org.in_summary? %>
            <%=f.text_field :insured_fee,:id => "insured_fee",:readonly => true,"data-carrying_fee_gte_on_insured_fee" =>IlConfig.carrying_fee_gte_on_insured_fee,"data-config_insured_fee" =>IlConfig.insured_fee,:size => 15 %>
          <%else %>
            <%= f.text_field :insured_fee,:id => "insured_fee",:value => 0,:readonly => true,:size => 15 %>
          <%end %>
        </td>
        <td>发货地短途运费</td>
        <td><%= f.text_field :from_short_carrying_fee,:id => "from_short_carrying_fee",:size => 15  %></td>
        <td>到货地短途运费</td>
        <td><%= f.text_field :to_short_carrying_fee,:id => "to_short_carrying_fee",:size => 15  %></td>
      </tr>
      <tr>
        <td>运费总计</td>
        <td><span id='sum_carrying_fee'></span></td>
        <td colspan='4'></td>
      </tr>
      <tr>
        <td>货物名称</td>
        <td colspan='3'>
          <%= f.text_field :goods_info,:size => 60,:id => :goods_info %>
        </td>
        <td>包装</td>
        <td><%= f.text_field :package,:size => 15%></td>
      </tr>
      <tr>
        <td>数量</td>
        <td><%= f.text_field :goods_num,:size => 15,:id => :goods_num %></td>
        <td>重量</td>
        <td><%= f.text_field :goods_weight,:size => 15  %></td>
        <td>体积</td>
        <td><%= f.text_field :goods_volume,:size => 15,:id => :goods_volume  %></td>
      </tr>
      <tr>
        <td>备注</td>
        <td colspan='5'><%= f.text_field :note,:size => 100,:id => :note %></td>
      </tr>
    </tbody>
  </table>
<%end%>
