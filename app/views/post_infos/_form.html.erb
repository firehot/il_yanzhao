<%= semantic_form_for resource ,:remote => true,:html =>{:id => "post_info_form",:class => "bill_selector"}  do |f|%>
  <%=f.error_messages %>
  <%= f.hidden_field :user_id,:value => current_user.id if f.object.new_record?%>
  <table class='table'>
    <tr class='odd'>
      <td>结算员:</td>
      <td><%= current_user %></td>
      <td>结算单位:</td>
      <td>
        <%=f.select :org_id,current_ability_orgs_for_select,{},{:id => "from_org_id"} %>
      </td>
      <td>结算日期:</td>
      <td> <%=Date.today().strftime('%Y-%m-%d')%></td>
    </tr>
    <tr class='even'>
      <td colspan="5" class='text-right'>实领金额:</td>
      <td><%=f.text_field :amount_fee ,:size => 10 %></td>
    </tr>
    <tr class='odd'>
      <td colspan='5' class='text-right'>货款:</td>
      <td><%=text_field_tag :sum_goods_fee,0,:readonly => true,:size => 10 %></td>
    </tr>
    <tr class='even'>
      <td>扣运费:</td>
      <td><%=text_field_tag :sum_k_carrying_fee,0,:readonly => true,:size => 10%></td>
      <td>扣手续费:</td>
      <td><%=text_field_tag :sum_k_hand_fee,0,:readonly => true,:size => 10 %></td>
      <td>中转手续费:</td>
      <td><%=text_field_tag :sum_transit_hand_fee,0,:readonly => true,:size => 10 %></td>
    </tr>
    <tr class='odd'>
      <td colspan='5' class='text-right'>实际提款:</td>
      <td><%=text_field_tag :sum_pay_fee,0,:readonly => true,:size => 10 %></td>
    </tr>
    <tr class='even'>
      <td colspan="5" class='text-right'>余额:</td>
      <td><%=text_field_tag :sum_rest_fee,"",:readonly => true,:size => 10 %></td>
    </tr>
    <tr class='odd'>
      <td>备注</td>
      <td colspan='5'>
        <%=f.text_field :note %>
      </td>
    </tr>
  </table>
<% end%>
