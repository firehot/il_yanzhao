<table class='table' data-detailUrl='<%=settlement_carrying_bills_path(resource)%>' data-params='{"hide_fields": ".carrying_fee,.carrying_fee_total,.insured_fee","show_fields": ".carrying_fee_th,.transit_hand_fee,.transit_carrying_fee,.th_amount"}'>
  <tr>
    <td>结算员:</td>
    <td><%=resource.user%></td>
    <td>结算单位:</td>
    <td>
      <%=resource.org.name %>
    </td>
    <td>结算日期:</td>
    <td> <%=resource.created_at.strftime('%Y-%m-%d')%></td>
    <td colspan='3'>&nbsp;</td>
    <td><%= resource.human_state_name %></td>
  </tr>
  <tr>
    <td>返程货款:</td>
    <td><%=resource.sum_goods_fee %></td>
    <td>提货付运费:</td>
    <td><%=resource.sum_carrying_fee%></td>
    <td>中转运费:</td>
    <td><%=resource.sum_transit_carrying_fee%></td>
    <td>中转手续费:</td>
    <td><%=resource.sum_transit_hand_fee%></td>
    <td>合计:</td>
    <td><%=resource.sum_fee %></td>
  </tr>
  <tr>
    <td>备注</td>
    <td colspan='9'>
      <%=resource.note %>
    </td>
  </tr>
</table>
<div id="table_wrap"></div>
