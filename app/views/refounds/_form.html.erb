<%= form_for resource ,:remote => true,:html =>{:id => "refound_form"}  do |f|%>
  <%= f.error_messages %>
  <%= f.hidden_field :user_id,:value => current_user.id if f.object.new_record?%>
  <table class='table'>
    <tr>
      <td>返款日期:</td>
      <td> <%=f.text_field :bill_date,:class => "datepicker",:size => 10%></td>
      <td>结算员:</td>
      <td><%=current_user%></td>
      <td colspan='2'>&nbsp;</td>
    </tr>
    <tr>
      <td>付款单位:</td>
      <td>
        <%=f.select :from_org_id,current_ability_orgs_for_select,{},{:id => "from_org_id"} %>
      </td>
      <td>收款单位:</td>
      <td>
        <%=f.select :to_org_id,exclude_current_ability_orgs_for_select,{:prompt => "--选择收款单位--"},:id => "to_org_id" %>
      </td>
      <td>
        <%= link_to_function image_tag("arrow-circle-double-135.png"), :id => 'btn_refound_refresh',:title => "刷新",:class => "tipsy"  %>
      </td>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <td>返程货款:</td>
      <td><%=f.text_field :sum_goods_fee ,:readonly => true,:size => 10 %></td>
      <td>提货付运费:</td>
      <td><%=f.text_field :sum_carrying_fee ,:readonly => true,:size => 10 %></td>
      <td rowspan='2' class='text-center'>合计:</td>
      <td rowspan='2' class='text-center'><span id='refound_sum_fee'><%=resource.sum_fee %></span></td>
    </tr>
    <tr>
      <td>中转运费:</td>
      <td><%=f.text_field :sum_transit_carrying_fee ,:readonly => true,:size => 10 %></td>
      <td>中转手续费:</td>
      <td><%=f.text_field :sum_transit_hand_fee ,:readonly => true,:size => 10 %></td>
    </tr>

    <tr>
      <td>备注</td>
      <td colspan='5'>
        <%=f.text_field :note,:size => 50 %>
      </td>
    </tr>
  </table>
<% end%>
