<%= semantic_form_for resource_class.search,:html => {:method => :get,:style => "width : 300px;" } do |f|%>
  <%= hidden_field_tag :direction,params[:direction] %>
  <%= hidden_field_tag :sort,params[:sort] %>
  <%= f.inputs do %>
    <%= f.input :from_org_id_eq,:label => "汇款机构",:as => :select,:collection => current_ability_orgs_for_select,:input_html => {:class => "select_org",:title => "可录入拼音简写查询"} %>
    <%= f.input :to_org_id_eq,:label => "收款机构",:as => :select,:collection => exclude_current_ability_orgs_for_select,:input_html => {:class => "select_org",:title => "可录入拼音简写查询"} %>
    <%= f.input :bill_date_gte,:label => "录入日期",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true,:value => Date.today} %>
    <%= f.input :bill_date_lte,:label => "~",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true,:value => Date.today} %>
    <%= f.input :state_eq,:label => "状态",:as => :select,:collection => remittance_states_for_select %>
  <% end %>
  <%=f.actions do %>
    <%=submit_tag "查询汇款记录",:class => "sexybutton sexysimple sexyblue" %>
  <% end %>
<% end%>
