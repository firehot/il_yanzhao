<table class='table' data-detailUrl="<%=transit_info_carrying_bills_path(resource,:show_fields => ".transit_carrying_fee,.transit_bill_no,.transit_to_phone",:hide_fields => ".insured_fee,.note")%>">
  <tbody>
    <tr>
      <td>中转部门:</td>
      <td><%=resource.org.name %></td>
      <td>中转日期:</td>
      <td><%=resource.bill_date.strftime('%Y-%m-%d')%></td>
    </tr>
    <tr>
      <td>中转公司:</td>
      <td><%=resource.transit_company.name%></td>
      <td>电话:</td>
      <td><%=resource.transit_company.phone%></td>
    </tr>
    <tr>
      <td>备注:</td>
      <td colspan="3"><%=resource.note%></td>
    </tr>
  </tbody>
</table>
<div id="table_wrap"></div>
